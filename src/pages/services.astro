---
import Layout from '../layouts/Page.astro';
import { Container } from '@components/odyssey-theme';
import ThreeColumnTextSection from '../components/sections/ThreeColumnTextSection.astro';
import TextCardSection from '../components/sections/TextCardSection.astro';
import { Icon } from 'astro-icon/components';

const seo = {
	title: 'Services | Bespoke Ethos',
	description: 'AI consulting and automation services for small business',
};
---

<Layout seo={seo}>
	<!-- Service Schemas for Services Page -->
	<script type="application/ld+json" set:html={JSON.stringify({
		'@context': 'https://schema.org',
		'@type': 'Service',
		serviceType: 'AI Sherpa Services',
		provider: {
			'@type': 'ProfessionalService',
			name: 'Bespoke Ethos'
		},
		areaServed: {
			'@type': 'City',
			name: 'Cleveland'
		},
		description: 'Guides nontechnical owners through tool selection, integration, and governance so AI works where it matters most. Includes technology assessment, integration planning, governance framework development, and ongoing strategy consulting.',
		offers: {
			'@type': 'Offer',
			availability: 'https://schema.org/InStock',
			priceCurrency: 'USD'
		}
	})}></script>
	<script type="application/ld+json" set:html={JSON.stringify({
		'@context': 'https://schema.org',
		'@type': 'Service',
		serviceType: 'Workflow Automation',
		provider: {
			'@type': 'ProfessionalService',
			name: 'Bespoke Ethos'
		},
		areaServed: {
			'@type': 'City',
			name: 'Cleveland'
		},
		description: 'End-to-end integration that connects chat models, data stores, and automation triggers into reliable business processes. Includes process analysis, custom development, system integration, testing, and documentation.',
		offers: {
			'@type': 'Offer',
			availability: 'https://schema.org/InStock',
			priceCurrency: 'USD'
		}
	})}></script>
	<script type="application/ld+json" set:html={JSON.stringify({
		'@context': 'https://schema.org',
		'@type': 'Service',
		serviceType: 'Small Business AI Integration',
		provider: {
			'@type': 'ProfessionalService',
			name: 'Bespoke Ethos'
		},
		areaServed: {
			'@type': 'City',
			name: 'Cleveland'
		},
		description: 'Transform AI capability into usable, auditable workflows that small teams can run and maintain without an ML PhD. Includes team training, maintainable system design, audit trail implementation, and human-in-the-loop safeguards.',
		offers: {
			'@type': 'Offer',
			availability: 'https://schema.org/InStock',
			priceCurrency: 'USD'
		}
	})}></script>

	<Container>
		<section class="services-hero__section">
			<div class="services-hero__badge">
				<Icon name="mdi:cog-sync" />
				<span>Professional AI Services</span>
			</div>
			<h1>Automate Busywork, Amplify Revenue</h1>
			<p class="services-hero__subtitle">Comprehensive AI consulting and automation services designed specifically for small business success</p>
		</section>
	</Container>

	<!-- What We Offer -->
	<TextCardSection surfaceNumber="1">
		<div class="section-header">
			<h2>What We Offer</h2>
			<p>Three core services to transform your business operations</p>
		</div>
		<ThreeColumnTextSection>
			<div slot="column-1-body" class="service-column">
				<div class="service-icon">
					<Icon name="mdi:compass-outline" />
				</div>
				<h3>AI Sherpa Services</h3>
				<p>Guides nontechnical owners through tool selection, integration, and governance so AI works where it matters most.</p>
				<ul class="service-list">
					<li>Technology assessment and selection</li>
					<li>Integration planning and execution</li>
					<li>Governance framework development</li>
					<li>Ongoing strategy consulting</li>
				</ul>
			</div>

			<div slot="column-2-body" class="service-column">
				<div class="service-icon">
					<Icon name="mdi:robot-outline" />
				</div>
				<h3>Workflow Automation</h3>
				<p>End-to-end integration that connects chat models, data stores, and automation triggers into reliable business processes.</p>
				<ul class="service-list">
					<li>Process analysis and optimization</li>
					<li>Custom automation development</li>
					<li>System integration and testing</li>
					<li>Documentation and handoff</li>
				</ul>
			</div>

			<div slot="column-3-body" class="service-column">
				<div class="service-icon">
					<Icon name="mdi:office-building" />
				</div>
				<h3>Small Business AI Integration</h3>
				<p>Transform AI capability into usable, auditable workflows that small teams can run and maintain without an ML PhD.</p>
				<ul class="service-list">
					<li>Team training and enablement</li>
					<li>Maintainable system design</li>
					<li>Audit trail implementation</li>
					<li>Human-in-the-loop safeguards</li>
				</ul>
			</div>
		</ThreeColumnTextSection>
	</TextCardSection>

	<!-- How We Work -->
	<Container>
		<section class="process-section">
			<h2>How We Work</h2>
			<p class="section-subtitle">A structured approach to AI implementation</p>
			<div class="process-grid">
				<div class="process-step">
					<div class="process-number">1</div>
					<h3>Discovery</h3>
					<p>Understand your business, identify pain points, and assess current workflows for automation opportunities.</p>
				</div>
				<div class="process-step">
					<div class="process-number">2</div>
					<h3>Strategy</h3>
					<p>Design tailored solutions that align with your goals, budget, and team capabilities.</p>
				</div>
				<div class="process-step">
					<div class="process-number">3</div>
					<h3>Implementation</h3>
					<p>Build, test, and deploy AI workflows with clear documentation and training materials.</p>
				</div>
				<div class="process-step">
					<div class="process-number">4</div>
					<h3>Handoff & Support</h3>
					<p>Transfer knowledge to your team with ongoing support to ensure long-term success.</p>
				</div>
			</div>
		</section>
	</Container>

	<!-- Value Proposition -->
	<TextCardSection surfaceNumber="2">
		<div class="section-header">
			<h2>Why Choose Bespoke Ethos</h2>
			<p>The value we deliver to your business</p>
		</div>
		<div class="value-grid">
			<div class="value-item">
				<Icon name="mdi:target-account" />
				<h3>Automate Busywork, Amplify Revenue</h3>
				<p>Remove repetitive tasks so owners focus on customers, products, and growth instead of manual busywork.</p>
			</div>
			<div class="value-item">
				<Icon name="mdi:account-group" />
				<h3>Compete Without Larger Headcount</h3>
				<p>Deliver the capabilities of a bigger team through carefully engineered AI workflows and automation.</p>
			</div>
			<div class="value-item">
				<Icon name="mdi:chart-timeline-variant" />
				<h3>Proven Return on Time Invested</h3>
				<p>Systems have historically repaid their cost many times over by reclaiming precious owner hours.</p>
			</div>
			<div class="value-item">
				<Icon name="mdi:shield-check-outline" />
				<h3>Governed, Maintainable Automations</h3>
				<p>Deployables include clear handoffs, audit trails, and human checkpoints to keep control in your hands.</p>
			</div>
		</div>
	</TextCardSection>

	<!-- Philosophy -->
	<Container>
		<section class="philosophy-section">
			<h2>Our Core Philosophy</h2>
			<p class="section-subtitle">Principles that guide every engagement</p>
			<div class="philosophy-grid">
				<div class="philosophy-card">
					<Icon name="mdi:human-greeting-variant" />
					<h3>Augment, Do Not Replace</h3>
					<p>AI is a force multiplier for human judgment, not a substitute for it. We design systems that enhance your team's capabilities.</p>
				</div>
				<div class="philosophy-card">
					<Icon name="mdi:account-check" />
					<h3>Human in the Loop as Default</h3>
					<p>Systems designed with human oversight produce safer, more useful outcomes and preserve accountability where it matters.</p>
				</div>
				<div class="philosophy-card">
					<Icon name="mdi:clock-time-eight" />
					<h3>Time Is the Ultimate ROI</h3>
					<p>The highest-value outcome is restored owner time to think strategically, sell effectively, and create confidently.</p>
				</div>
				<div class="philosophy-card">
					<Icon name="mdi:briefcase-account" />
					<h3>Built by Practitioners</h3>
					<p>Solutions from people who understand small business because we've worn those hats and faced those challenges.</p>
				</div>
			</div>
		</section>
	</Container>

	<!-- CTA Section -->
	<Container>
		<section class="cta-section">
			<h2>Ready to Get Started?</h2>
			<p>Let's discuss how we can transform your business operations with AI automation.</p>
			<div class="cta-buttons">
				<a href="/company/contact" class="cta-button cta-button--primary">Schedule a Consultation</a>
				<a href="/company/about" class="cta-button cta-button--secondary">Learn About Us</a>
			</div>
		</section>
	</Container>
</Layout>

<style>
	/* Hero Section */
	.services-hero__section {
		margin: var(--section-margin) auto;
		padding: 4rem 0 3rem;
		text-align: center;
		max-width: 800px;
	}
	.services-hero__badge {
		display: inline-flex;
		align-items: center;
		gap: 0.5rem;
		padding: 0.5rem 1rem;
		background: var(--theme-surface-1);
		border-radius: 2rem;
		margin-bottom: 1.5rem;
		font-size: 0.875rem;
		font-weight: 600;
		color: var(--theme-primary);
	}
	.services-hero__badge svg {
		width: 1.25rem;
		height: 1.25rem;
	}
	.services-hero__section h1 {
		font-size: clamp(2.5rem, 5vw, 3.5rem);
		margin-bottom: 1rem;
		font-weight: 800;
	}
	.services-hero__subtitle {
		font-size: 1.25rem;
		color: var(--theme-text-secondary);
		line-height: 1.6;
	}

	/* Section Headers */
	.section-header {
		text-align: center;
		margin-bottom: 3rem;
	}
	.section-header h2 {
		margin-bottom: 0.5rem;
	}
	.section-header p, .section-subtitle {
		font-size: 1.125rem;
		color: var(--theme-text-secondary);
	}

	/* Service Columns */
	.service-column {
		text-align: left;
	}
	.service-icon {
		font-size: 3rem;
		color: var(--theme-primary);
		margin-bottom: 1rem;
		text-align: center;
	}
	.service-list {
		margin-top: 1.5rem;
		padding-left: 1.5rem;
		text-align: left;
	}
	.service-list li {
		margin-bottom: 0.5rem;
		color: var(--theme-text-secondary);
		line-height: 1.6;
	}

	/* Process Section */
	.process-section {
		margin: var(--section-margin) auto;
		padding: 4rem 0;
		text-align: center;
	}
	.process-section h2 {
		margin-bottom: 0.5rem;
	}
	.process-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
		gap: 2rem;
		margin-top: 3rem;
	}
	.process-step {
		text-align: center;
	}
	.process-number {
		width: 60px;
		height: 60px;
		margin: 0 auto 1rem;
		display: flex;
		align-items: center;
		justify-content: center;
		font-size: 1.75rem;
		font-weight: 800;
		color: var(--theme-primary);
		background: var(--theme-surface-1);
		border-radius: 50%;
	}
	.process-step h3 {
		margin-bottom: 0.75rem;
	}
	.process-step p {
		color: var(--theme-text-secondary);
		line-height: 1.6;
	}

	/* Value Grid */
	.value-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
		gap: 2rem;
		margin-top: 2rem;
	}
	.value-item {
		text-align: center;
	}
	.value-item svg {
		width: 3rem;
		height: 3rem;
		color: var(--theme-primary);
		margin-bottom: 1rem;
	}
	.value-item h3 {
		margin-bottom: 0.75rem;
		font-size: 1.125rem;
	}
	.value-item p {
		color: var(--theme-text-secondary);
		line-height: 1.6;
	}

	/* Philosophy Section */
	.philosophy-section {
		margin: var(--section-margin) auto;
		padding: 4rem 0;
		text-align: center;
	}
	.philosophy-section h2 {
		margin-bottom: 0.5rem;
	}
	.philosophy-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
		gap: 2rem;
		margin-top: 3rem;
	}
	.philosophy-card {
		padding: 2rem;
		background: var(--theme-surface-1);
		border-radius: var(--theme-shape-radius);
		text-align: center;
	}
	.philosophy-card svg {
		width: 3rem;
		height: 3rem;
		color: var(--theme-primary);
		margin-bottom: 1rem;
	}
	.philosophy-card h3 {
		margin-bottom: 0.75rem;
		font-size: 1.125rem;
	}
	.philosophy-card p {
		color: var(--theme-text-secondary);
		line-height: 1.6;
	}

	/* CTA Section */
	.cta-section {
		margin: var(--section-margin) auto;
		padding: 4rem 2rem;
		text-align: center;
		background: linear-gradient(135deg, var(--theme-primary) 0%, var(--theme-primary-hover) 100%);
		border-radius: var(--theme-shape-radius);
		color: white;
	}
	.cta-section h2 {
		color: white;
		margin-bottom: 1rem;
	}
	.cta-section p {
		font-size: 1.25rem;
		margin-bottom: 2rem;
		opacity: 0.95;
	}
	.cta-buttons {
		display: flex;
		gap: 1rem;
		justify-content: center;
		flex-wrap: wrap;
	}
	.cta-button {
		display: inline-block;
		padding: 1rem 2rem;
		border-radius: var(--theme-button-border-radius);
		text-decoration: none;
		font-weight: 600;
		transition: all 0.2s ease;
	}
	.cta-button--primary {
		background: white;
		color: var(--theme-primary);
	}
	.cta-button--primary:hover {
		transform: translateY(-2px);
		box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
	}
	.cta-button--secondary {
		background: transparent;
		color: white;
		border: 2px solid white;
	}
	.cta-button--secondary:hover {
		background: white;
		color: var(--theme-primary);
	}

	@media (max-width: 768px) {
		.services-hero__section h1 {
			font-size: 2rem;
		}
		.process-grid {
			grid-template-columns: 1fr;
		}
		.philosophy-grid {
			grid-template-columns: 1fr;
		}
		.value-grid {
			grid-template-columns: 1fr;
		}
		.cta-section {
			padding: 3rem 1.5rem;
		}
	}
</style>

