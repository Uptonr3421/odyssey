---
import { Icon } from 'astro-icon/components';
import Layout from '../../layouts/Page.astro';
import { Container, Button } from '@components/odyssey-theme';

const seo = {
	title: 'Contact | Bespoke Ethos',
	description: 'Contact Bespoke Ethos for AI consulting and automation services',
};
---

<Layout seo={seo}>
	<Container>
		<section class="contact-hero__section">
			<div class="contact-hero__text-section">
				<h1>Contact Us</h1>
				<p>
					Ready to automate your busywork and amplify your revenue? Let's discuss how Bespoke Ethos can transform your business operations.
				</p>
				<div class="contact-btns__container">
					<Button href="mailto:contact@bespokeethos.com?subject=webcontact" customIcon aria-label="Email Bespoke Ethos">
						Email Us
						<Fragment slot="icon">
							<Icon name="mdi:email"/>
						</Fragment>
					</Button>
				</div>
				<div>
					<p>
						<em><a href="mailto:contact@bespokeethos.com?subject=webcontact">contact@bespokeethos.com</a></em>
						<button id="copyEmail" type="button" aria-label="Copy email address" style="margin-left: 0.5rem;">
							Copy
						</button>
					</p>
				</div>
			</div>
		</section>
	</Container>
</Layout>

<style>
	.contact-hero__section {
		margin: var(--section-margin) auto;
		min-height: calc(90vh - var(--navbar-height));
	}
	.contact-hero__text-section {
		padding: 2rem;
		display: flex;
		flex-direction: column;
		justify-content: center;
		background-color: var(--theme-surface-1);
		border-radius: var(--theme-shape-radius);
	}
	.contact-btns__container {
		margin: 1.5rem 0;
	}
</style>

<script>
	const copyButton = document.getElementById('copyEmail');
	if (copyButton) {
		copyButton.addEventListener('click', async () => {
			try {
				await navigator.clipboard.writeText('contact@bespokeethos.com');
				copyButton.textContent = 'Copied!';
				setTimeout(() => (copyButton.textContent = 'Copy'), 2000);
			} catch {}
		});
	}
</script>
